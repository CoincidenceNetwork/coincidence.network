---
import Layout from '~/layouts/LandingLayout.astro';

import Hero from '~/components/widgets/Hero.astro';

const metadata = {
  title: 'Coincidence Home Page',
};
---

<Layout metadata={metadata}>
  <Hero
    title="Coincidence"
    subtitle="Connecting the world and advancing matchmaking technologies for the flourishing of social relationships."
    actions={[
      {
        variant: 'primary',
        text: 'Launch App',
        href: 'https://app.coincidence.network',
        icon: 'tabler:square-rounded-arrow-right',
      },
      { text: 'Manifesto', href: '/manifesto' },
    ]}
    image={{ src: '~/assets/images/logo.png', alt: 'Coincidence logo' }}
  />
</Layout>
